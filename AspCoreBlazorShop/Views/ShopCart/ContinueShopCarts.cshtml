@model User 
@{
    ViewData["Title"] = "ادامه سبد خرید";
}



<!DOCTYPE html>

<!-- Hero Start -->
<section class="bg-half bg-light d-table w-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 text-center">
                <div class="page-next-level">
                    <h4 class="title"> @ViewData["Title"] </h4>
                    <div class="page-next">
                        <nav aria-label="breadcrumb" class="d-inline-block">
                            <ul class="breadcrumb bg-white rounded shadow mb-0">
                                <li class="breadcrumb-item"><a href="/">خانه </a></li>
                                <li class="breadcrumb-item"><a href="/shopcarts">سبد خرید </a></li>
                                <li class="breadcrumb-item active" aria-current="page">تکمیل اطلاعات </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div><!--end col-->
        </div><!--end row-->
    </div> <!--end container-->
</section><!--end section-->
<div class="position-relative">
    <div class="shape overflow-hidden text-white">
        <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
        </svg>
    </div>
</div>
<!-- Hero End -->
<!-- Start -->
<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-6">
                <div class="rounded shadow-lg p-4">
                    <h5 class="mb-0">جزئیات صورتحساب :</h5>

                    <form class="mt-4" asp-action="ContinueShopCarts">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label">موبایل شما <span class="text-danger">*</span></label>
                                    <input asp-for="Mobile" class="form-control" value="@User.Identity.Name" disabled>
                                </div>
                            </div><!--end col-->
                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label">نام شما <span class="text-danger">*</span></label>
                                    <input required asp-for="FullName" class="form-control" placeholder="نام  :">
                                </div>
                            </div><!--end col-->
                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label">  "کد پستی <span class="text-danger">*</span></label>
                                    <input required asp-for="CodePosti" class="form-control" placeholder="کد پستی  :" >
                                </div>
                            </div><!--end col-->
                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label">آدرس  <span class="text-muted">(اجباری)</span></label>
                                    <textarea required asp-for="Address" class="form-control" rows="5" >
                                    </textarea>
                                </div>
                            </div><!--end col-->
                      
                     
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">شهر / منطقه <span class="text-danger">*</span></label>
                                    <input asp-for="City" class="form-control" placeholder="نام شهر :" required>
                                </div>
                            </div><!--end col-->
                           
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">کشور <span class="text-danger">*</span></label>
                                    <select asp-for="State" asp-items="Html.GetEnumSelectList(typeof(StateEnum))" class="form-select form-control" aria-label="به طور پیش فرض مثال انتخاب کنید">
                                      
                                    </select>
                                </div>
                            </div><!--end col-->
                            <div class="col-md-6">
                                <div class="mb-3">
                                  <button type="submit" class="btn btn-success">ذخیره اطلاعات</button>
                                </div>
                            </div><!--end col-->
                        </div><!--end row-->
                    </form><!--end form-->
                </div>

       

              
            </div><!--end col-->

            <div class="col-lg-5 col-md-6 mt-4 mt-sm-0 pt-2 pt-sm-0">
                <div class="rounded shadow-lg p-4 sticky-bar">
                    <div class="d-flex mb-4 justify-content-between">
                        <h5>@ViewBag.CoustShopCarts آیتم </h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-center table-padding mb-0">
                            <tbody>                             
                                <tr class="bg-light">
                                    <td class="h5 fw-bold">مجموع </td>
                                    <td class="text-end text-primary h4 fw-bold">
                                        @ViewBag.SumAllPriceForPay.ToString("#,0 تومان")
                                    </td>
                                </tr>
                            </tbody>
                        </table>


                        <div class="mt-4 pt-2">
                            <div class="d-grid">
                                @if (!string.IsNullOrEmpty(Model.Address) && !string.IsNullOrEmpty(Model.FullName) && !string.IsNullOrEmpty(Model.City))
                                {
                                    <a href="/ConnectToPayment/@ViewBag.SumAllPriceForPay.ToString()" class="btn btn-primary">پرداخت </a>
                                }
                                else
                                {
                                    <a href="#" class="btn btn-primary disabled">لطفا اطلاعات را تکمیل کنید </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--end row-->
    </div><!--end container-->
</section><!--end section-->