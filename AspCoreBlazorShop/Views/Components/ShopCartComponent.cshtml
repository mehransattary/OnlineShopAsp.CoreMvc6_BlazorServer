@model IEnumerable<ShopCartViewModel>
<div class="dropdown-menu dd-menu dropdown-menu-end bg-white shadow rounded border-0 mt-3 p-4" style="width: 300px;">
    <div class="pb-4">
        @foreach (var item in Model)
        {
            <a href="/Product/@item.ProductEnglishName" class="d-flex align-items-center">
                <img src="@item.ProductImage" class="shadow rounded" style="max-height: 64px;" alt="">
                <div class="flex-1 text-start ms-3">
                    <h6 class="text-dark mb-0">
                        @item.ProductName
                    </h6>
                    <p class="text-muted mb-0">
                        @item.ProductPrice.ToString("#,0 ") ✖ @item.Count 
                    </p>
                </div>
                <h6 class="text-dark mb-0">  @item.ProductSumPrice.ToString("#,0 تومان")</h6>
            </a>

        }


    </div>

    <div class="d-flex align-items-center justify-content-between pt-4 border-top">
        <h6 class="text-dark mb-0">مجموع (تومان):</h6>
        <h6 class="text-dark mb-0">
            @ViewBag.SumAllprice
        </h6>
    </div>

    <div class="mt-3 text-center">
        <a href="/ShopCarts" class="btn btn-primary me-2">نمایش سبد خرید </a>
    </div>
</div>
