@model IEnumerable<Advertise>

<!-- Features Start -->
<div class="container-fluid mt-4">
    <div class="row">
        @foreach (var advertise in Model)
        {
               <div class="col-md-4 mt-4 pt-2">
            <div class="card shop-features border-0 rounded overflow-hidden">
                    <img src="@advertise.AdvertiseImage" class="img-fluid" alt="@advertise.AdvertiseName">
                <div class="category-title">
                   <h4>@advertise.AdvertiseName </h4>
                   <a href="@advertise.AdvertiseUrl" class="btn btn-sm btn-soft-primary mt-2" title="@advertise.AdvertiseName">اکنون بخرید </a>
                </div>
            </div>
        </div><!--end col-->
        }
     

  
    </div><!--end row-->
</div><!--end container-->
<!-- Features End -->