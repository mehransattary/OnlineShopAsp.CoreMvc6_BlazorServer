@model Post
@{
    ViewData["Title"] = "افزودن پست جدید";
}

<h4 class="header-title m-t-0 m-b-30">
    @ViewData["Title"]
</h4>

<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <div class="row">
                <a asp-action="Index" class="btn btn-primary btn-bordred waves-effect w-md waves-light m-b-5 " style="    float: left;">
                    بازگشت
                </a>
               <div class="col-lg-8 col-lg-offset-2">
                    <form class="form-horizontal" Post="form" asp-action="Create" method="post">
               
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="example-email">نام  پست</label>
                        <div class="col-md-10">
                                <input asp-for="PostName" class="form-control" placeholder="نام  پست">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">هزینه  پست</label>
                        <div class="col-md-10">
                                <input asp-for="PostPrice" class="form-control" placeholder=" هزینه پست">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-sm btn-success waves-effect waves-light">ذخیره </button>
                   
                </form>
            </div><!-- end col -->
            </div>
        </div>
    </div>
</div>


