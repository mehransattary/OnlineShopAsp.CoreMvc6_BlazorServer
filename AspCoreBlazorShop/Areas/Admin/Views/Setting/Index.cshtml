@model Setting
@{
    ViewData["Title"] = "تنظیمات";
    byte counter = 1;
}


<div class="row">
    <div class="col-lg-12">
        <div class="card-box">

            @if (Model == null)
            {
                <a asp-action="Create" class="btn btn-success btn-bordred waves-effect w-md waves-light m-b-5 " style="    float: left;">
                    جدید
                </a>
            }
            <h4 class="header-title m-t-0 m-b-30">
                @ViewData["Title"]
            </h4>



            <div class="table-responsive">
                <table class="table m-0">
                    <thead>
                        <tr>
                            <th>
                                نام سایت
                            </th>
                            <th>
                                نام فروشگاه
                            </th>
                            <th>
                                لوگو
                            </th>
                   
                            <th>
                                عملیات
                            </th>
                        </tr>
                    </thead>


                    <tbody>
                        @if (Model!=null)
                        {
                            <tr>
                                <td>
                                    @Model.SettingSiteName
                                </td>
                                <td>
                                    @Model.SettingShopName
                                </td>
                                <td>
                                    <img src="@Model.SettingLogo"  width="150"/>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-bordred waves-effect w-md waves-light m-b-5 ">
                                        ویرایش
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-bordred waves-effect w-md waves-light m-b-5 ">
                                        حذف
                                    </a>


                                </td>
                            </tr>
                        }
                   



                    </tbody>
                </table>
            </div>
        </div>
    </div><!-- end col -->

</div>
<!-- end row -->
                   