@model User
@{
    ViewData["Title"] = "ویرایش کاربر " + Model.FullName;
}

<h4 class="header-title m-t-0 m-b-30">
    @ViewData["Title"]
</h4>

<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <div class="row">
                <a asp-action="Index" class="btn btn-primary btn-bordred waves-effect w-md waves-light m-b-5 " style="    float: left;">
                    بازگشت
                </a>
                <div class="col-lg-8 col-lg-offset-2">
                    <form class="form-horizontal" role="form" asp-action="Edit" method="post">
                        <input asp-for="Id" hidden/>
                        <input asp-for="CreateDate" hidden />

                        <div class="form-group">
                            <label class="col-md-2 control-label"> نقش   </label>
                            <div class="col-md-10">
                                <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-control">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="example-email" asp-for="FullName"></label>
                            <div class="col-md-10">
                                <input asp-for="FullName" class="form-control" placeholder="نام فارسی کامل">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"> موبایل </label>
                            <div class="col-md-10">
                                <input asp-for="Mobile" class="form-control" placeholder="موبایل">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label"> رمز عبور </label>
                            <div class="col-md-10">
                                <input asp-for="Password" class="form-control" placeholder="رمز عبور">
                            </div>
                        </div>



                        <div class="form-group">
                            <label class="col-md-2 control-label"> رمز عبور </label>
                            <div class="col-md-10">
                                <textarea asp-for="Address" class="form-control">

                                </textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"> کد پستی  </label>
                            <div class="col-md-10">
                                <input asp-for="CodePosti" class="form-control" placeholder="کد پستی ">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label"> استان   </label>
                            <div class="col-md-10">
                                <select asp-for="State" asp-items="Html.GetEnumSelectList(typeof(StateEnum))" class="form-control">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"> شهر   </label>
                            <div class="col-md-10">
                                <input asp-for="City" class="form-control" placeholder="شهر  ">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-sm btn-success waves-effect waves-light">ذخیره </button>

                    </form>
                </div><!-- end col -->
            </div>
        </div>
    </div>
</div>


